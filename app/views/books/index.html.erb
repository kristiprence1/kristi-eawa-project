<% if @books.size == 0 %>
  <div class="container">
    <h2 class="text-muted mt-5">Books</h2>
    <div class="text-center mt-5">
      No books found!<span class="ml-3">
      <%= link_to "Create New Book", new_book_path, class: "btn btn-primary" %>
    </span>
    </div>
  </div>
<% else %>
  <div class="container">
    <h2 class="text-muted mt-5">Books</h2>
    <div class="table-responsive mt-4">
      <table class="table table-striped table-hover">
        <thead>
        <th>Title</th>
        <th>Author</th>
        <th>Language</th>
        <th>Publisher</th>
        <th>Publish Year</th>
        <th colspan="2">Actions</th>
        </thead>
        <tbody>
        <% @books&.each do |book| %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.author %></td>
            <td><%= book.language %></td>
            <td><%= book.publisher %></td>
            <td><%= book.publish_year %></td>
            <td><%= link_to "Edit", edit_book_path(book), class: 'btn btn-secondary' %></td>
            <td><%= link_to "Delete", book, data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger' %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <div class="mt-3 ">
      <%= link_to "New Book", new_book_path, class: "btn btn-primary" %>
    </div>
  </div>
<% end %>