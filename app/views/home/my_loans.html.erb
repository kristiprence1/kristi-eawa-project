<% if @my_loans.size == 0 %>
  <div class="container">
    <h2 class="text-muted mt-5">Loans</h2>
    <div class="text-center mt-5">
      No loans found!
    </div>
  </div>
<% else %>
  <div class="container">
    <h2 class="text-muted mt-5">Loans</h2>
    <div class="table-responsive mt-4">
      <table class="table table-striped table-hover">
        <thead>
        <th>User</th>
        <th>Book</th>
        <th>Journal</th>
        <th>Amount</th>
        <th>Status</th>
        <th>Fine Amount</th>
        </thead>
        <tbody>
        <% @my_loans&.each do |loan| %>
          <tr>
            <td><%= loan&.user&.name %></td>
            <td><%= loan&.reservation&.book&.title %></td>
            <td><%= loan&.reservation&.journal&.title %></td>
            <td><%= loan.amount %></td>
            <td><%= loan.status %></td>
            <td><%= loan.fine_amount %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>