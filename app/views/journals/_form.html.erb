<%= form_with(model: @journal, local: true) do |form| %>
  <div class="form-group">
    <strong>Title</strong>
    <div>
      <%= form.text_field :title, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group mt-3">
    <strong>Volume</strong>
    <div>
      <%= form.text_field :volume, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group mt-3">
    <strong>Issue</strong>
    <div>
      <%= form.text_field :issue, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group mt-3">
    <strong>Language</strong>
    <div>
      <%= form.text_field :language, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group mt-3">
    <strong>Publisher</strong>
    <div>
      <%= form.text_field :publisher, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group mt-3">
    <strong>Publish Year</strong>
    <div>
      <%= form.text_field :publish_year, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group mt-3">
    <strong>Description</strong>
    <div>
      <%= form.text_area :description, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group mt-3">
    <strong>Categories</strong>
    <div>
      <%= form.select :categories, options_for_select(['academic', 'historic', 'popular'], @journal.categories), {}, class: 'form-select' %>
    </div>
  </div>

  <div class="mt-3">
    <%= form.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>