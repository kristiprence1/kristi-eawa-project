<% if @journals.size == 0 %>
  <div class="container">
    <h2 class="text-muted mt-5">Journals</h2>
    <div class="text-center mt-5">
      No journals found!<span class="ml-3">
      <%= link_to "Create New journal", new_journal_path, class: "btn btn-primary" %>
    </span>
    </div>
  </div>
<% else %>
  <div class="container">
    <h2 class="text-muted mt-5">Journals</h2>
    <div class="table-responsive mt-4">
      <table class="table table-striped table-hover">
        <thead>
        <th>Title</th>
        <th>Volume</th>
        <th>Language</th>
        <th>Publisher</th>
        <th>Publish Year</th>
        <th colspan="2">Actions</th>
        </thead>
        <tbody>
        <% @journals&.each do |journal| %>
          <tr>
            <td><%= journal.title %></td>
            <td><%= journal.volume %></td>
            <td><%= journal.language %></td>
            <td><%= journal.publisher %></td>
            <td><%= journal.publish_year %></td>
            <td><%= link_to "Edit", edit_journal_path(journal), class: 'btn btn-secondary' %></td>
            <td><%= link_to "Delete", journal, data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger' %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <div class="mt-3 ">
      <%= link_to "New Journal", new_journal_path, class: "btn btn-primary" %>
    </div>
  </div>
<% end %>