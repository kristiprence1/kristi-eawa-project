<% if @users.size == 0 %>
  <div class="container">
    <h2 class="text-muted mt-5">Users</h2>
    <div class="text-center mt-5">
      No users found!
    </div>
  </div>
<% else %>
  <div class="container">
    <h2 class="text-muted mt-5">Users</h2>
    <div class="mt-3">
      <form action="/users" method="get">
        <div class="row">
          <div class="col-md-4">
            <input type="text" class="form-control" name="search" placeholder="Search">
          </div>
          <div class="col-md-3">
            <input type="submit" value="search" class="btn btn-primary">
          </div>
        </div>
      </form>
    </div>
    <div class="table-responsive mt-4">
      <table class="table table-striped table-hover">
        <thead>
        <th>Name</th>
        <th>Surname</th>
        <th>Email</th>
        </thead>
        <tbody>
        <% @users&.each do |journal| %>
          <tr>
            <td><%= journal.name %></td>
            <td><%= journal.surname %></td>
            <td><%= journal.email %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>